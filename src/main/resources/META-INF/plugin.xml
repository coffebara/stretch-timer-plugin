<idea-plugin>
    <id>com.coffebara.stretch-timer</id>
    <name>Stretch Timer</name>
    <version>1.0</version>
    <vendor email="support@example.org" url="http://example.org">Stretch Timer Team</vendor>

    <description>
        <![CDATA[
        Stretch Timer Plugin for IntelliJ IDEA helps you take regular breaks and stretch during long coding sessions.
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        <ul>
            <li>1.0 - Initial release</li>
        </ul>
        ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="StretchTimer" class="org.example.StretchTimerPlugin" text="Start Stretch Timer"
                description="Start a timer for stretching breaks" icon="/icons/stretch.png">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin> 